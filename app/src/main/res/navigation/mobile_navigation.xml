<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dicoding.dicodingevent.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_active"
        android:name="com.dicoding.dicodingevent.ui.active.ActiveFragment"
        android:label="@string/title_active"
        tools:layout="@layout/fragment_active" />

    <fragment
        android:id="@+id/navigation_past"
        android:name="com.dicoding.dicodingevent.ui.past.PastFragment"
        android:label="@string/title_past"
        tools:layout="@layout/fragment_past" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.dicoding.dicodingevent.ui.favorite.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.dicoding.dicodingevent.ui.settings.SettingsFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_settings" />
</navigation>